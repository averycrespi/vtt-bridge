{
  "manifest_version": 2,
  "name": "VTT Bridge",
  "version": "0.4.0",
  "description": "A browser extension that connects Dungeon Master's Vault to Roll20.",
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.dungeonmastersvault.com/pages/dnd/5e/characters/*?frame=true"
      ],
      "js": ["dist/polyfill.js", "dist/dmv.js"],
      "css": ["dist/dmv.css"]
    },
    {
      "matches": ["*://app.roll20.net/editor*"],
      "js": ["dist/polyfill.js", "dist/roll20.js"]
    }
  ],
  "background": {
    "scripts": ["dist/polyfill.js", "dist/background.js"]
  }
}
